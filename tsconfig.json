{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "docs/examples/promise/90_typegen/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@chainx-v2/api": [
        "packages/api/src"
      ],
      "@chainx-v2/api/*": [
        "packages/api/src/*"
      ],
      "@chainx-v2/api-contract": [
        "packages/api-contract/src"
      ],
      "@chainx-v2/api-contract/*": [
        "packages/api-contract/src/*"
      ],
      "@chainx-v2/api-derive": [
        "packages/api-derive/src"
      ],
      "@chainx-v2/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@chainx-v2/metadata": [
        "packages/metadata/src"
      ],
      "@chainx-v2/metadata/*": [
        "packages/metadata/src/*"
      ],
      "@chainx-v2/rpc-core": [
        "packages/rpc-core/src"
      ],
      "@chainx-v2/rpc-core/*": [
        "packages/rpc-core/src/*"
      ],
      "@chainx-v2/rpc-provider": [
        "packages/rpc-provider/src"
      ],
      "@chainx-v2/rpc-provider/*": [
        "packages/rpc-provider/src/*"
      ],
      "@chainx-v2/types": [
        "packages/types/src"
      ],
      "@chainx-v2/types/*": [
        "packages/types/src/*"
      ],
      "@chainx-v2/types-known": [
        "packages/types-known/src"
      ],
      "@chainx-v2/types-known/*": [
        "packages/types-known/src/*"
      ],
      "@chainx-v2/account": [
        "packages/account/src"
      ],
      "@chainx-v2/account/*": [
        "packages/account/src/*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
